<% if @errors.present? %>
  <div class="errors">
    <ul>
      <% @errors.each do |error| %>
        <li>error</li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @diary do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>    
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description %>    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>